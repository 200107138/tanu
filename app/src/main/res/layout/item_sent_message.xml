<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/senderAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            app:shapeAppearanceOverlay="@style/Circular"
            android:src="@drawable/avatar_holder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sent_message_text_background"
            android:gravity="center|start"
            android:padding="8dp"
android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/senderAvatar"
            app:layout_constraintHeight_max="200dp"

            app:layout_constraintHeight_min="50dp"
            app:layout_constraintTop_toTopOf="@+id/senderAvatar"
            app:layout_constraintWidth_max="300dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>