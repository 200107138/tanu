<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/senderAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/teal_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="senderName"
            app:layout_constraintStart_toEndOf="@+id/senderAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:text="messageText"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/senderName"
            app:layout_constraintStart_toStartOf="@+id/senderName"
            app:layout_constraintTop_toBottomOf="@+id/senderName" />

        <TextView
            android:id="@+id/messageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="messageDate"
            app:layout_constraintEnd_toEndOf="@+id/messageText"
            app:layout_constraintStart_toStartOf="@+id/messageText"
            app:layout_constraintTop_toBottomOf="@+id/messageText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>